<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="TODO"
        android:scaleType="center"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/iv_filledback"
        android:layout_width="fill_parent"
        android:layout_height="732dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:keepScreenOn="true"
        android:orientation="vertical"
        android:visibility="visible">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="TODO"
                android:src="@drawable/photon" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open SLAndroid Pixie"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NXTConnect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="@string/slave"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/WebServer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="@string/webserver"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/buttonConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:onClick="HandleClick"
            android:padding="20dip"
            android:textOff="@string/mainConnect"
            android:textOn="@string/mainDisconnect" />

        <TextView
            android:id="@+id/requestsText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="" />

        <Button
            android:id="@+id/buttonPref"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="HandleClick"
            android:text="Preferences" />

        <TextView
            android:id="@+id/inoutText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/main_text" />


        <LinearLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:gravity="bottom|right"
            android:orientation="horizontal" />
    </LinearLayout>

</FrameLayout>
